{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
